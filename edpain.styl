dhfgreen = #00C12A
dhfyellow = #FEBD25
dhfblue = #0091D4
dhfbordergray = #F3F1F2
dhfedlinktext = #3C708A
dhfheadertext = #27a9e0

transition(n)
  transition n
  -webkit-transition n
  -moz-transition n
  -o-transition n
  -ms-transition n
  
transform(n)
  transform n
  -webkit-transform n
  -moz-transform n
  -o-transform n
  -ms-transform n

transform-origin(n)
  transform-origin n
  -webkit-transform-origin n
  -moz-transform-origin n
  -o-transform-origin n
  -ms-transform-origin n

@font-face
  font-family "GeosansLight"
  src url("GeosansLight.ttf")

body
  font-family "GeosansLight"
  color #3A3A3A
  text-align center
  a
    text-decoration none

body > header
  width 100%
  height 4em
  background-color dhfbordergray
  font-size 14pt
  line-height 4em
  text-align left
  #preLogo
    color dhfgreen
    margin -1em .5em 0em 4em
    display inline-block
    vertical-align text-bottom
  .smallLogo
    height 2em
    margin-top 1em
  #postLogo
    color dhfgreen
    margin-left .5em
    display inline-block
    vertical-align text-top
    margin-top -1.25em
  #anchorLogo
    height 2.5em
    padding-right 4em
    padding-bottom 1.5em
    position absolute
    right 0
    top 0
    vertical-align top
    word-wrap nowrap
    font-size inherit
    background-image url('EdTechLinkAnchor.svg')
    background-position right top
    background-size auto 100%
    background-repeat no-repeat
    color dhfedlinktext

#subHeader
  h1
    font-size 200pt
    font-family "helvetica"
    font-weight 800
    color transparent
    text-shadow .01em .01em .01em dhfheadertext, .005em .005em .005em darken(dhfheadertext, 40%), .01em .01em 0 dhfheadertext
  p
    font-size 23pt
    margin-top -1.1em
    color dhfheadertext
    margin-left 17em
    a
      color dhfyellow
    
#description
  font-size 24pt
  margin-top 1.75em
  text-align center
  p
    width 25em
    margin 1em auto 0 auto
    text-align left
    line-height 1.25em
    a
      color dhfyellow

#painEntry
  font-size 24pt
  width 27em
  text-align left
  display inline-block
  margin 2em auto 0 auto

#painEntry input::-ms-input-placeholder,
#postPainEntry input::-ms-input-placeholder
  color: #AAA
  text-align: center

#painEntry input:-moz-placeholder,
#postPainEntry input:-moz-placeholder
  color: #AAA
  text-align: center

#painEntry input::-webkit-input-placeholder,
#postPainEntry input::-webkit-input-placeholder
  color: #AAA
  text-align: center

#painEntry, #postPainEntry 
  input
    margin 0 .5em
    background-color #DDD
    border none
    border-radius 3px
    padding .25em

#painEntry
  .role
    width 13em
  .pluralRole
    visibility hidden
  a
    color dhfheadertext
  p
    margin-bottom .5em
  textarea
    width 25.5em
    height 4em
    background-color #DDD
    border none
    border-radius 3px
    margin-bottom -.25em
    padding .15em .25em
  .name
    width 12em
  .zip
    width 4.5em
  .identifiers > *:last-child
    margin-right 0

#painEntry .post,
#postPainEntry button,
#pains li button
  width 10.5em
  font-size inherit
  font-family "GeosansLight"
  color white
  background-color dhfgreen
  border 0
  border-radius 3px
  box-shadow 2px 2px 2px #AAA
  padding .20em 0
  margin 0
  margin-bottom 1em
  cursor pointer

#pains li 
  button
    font-size 65%
    background-color dhfblue
    opacity 0.8
    &:hover
      opacity 1.0
    &.twitter
      clear both
      margin-left 4em
  a
    font-size 35%
    display block
    margin-top -1.25em
    float right
    margin-right 5em

#painEntry .post
  width 100%
  visibility hidden
  &:hover
    background-color dhfheadertext

#painEntry .post:active,
#postPainEntry button:active,
#pains button:active
  color #DDD
  box-shadow 2px 2px 2px #AAA inset
  position relative
  left 2px
  top 2px

#postPainEntry  
  width 26em
  height 8em
  margin 0 auto
  display none
  p
    margin-top 1.5em
    font-size 180%
    text-align center
    margin-bottom .25em
  button
    padding .25em .5em
    background-color dhfyellow
    opacity 0.8
    cursor pointer
    margin-top .5em
    &:hover
      opacity 1.0
    &.sticky
      position fixed
      top -.6em
      left 50%
      z-index 3
      margin-left -5.25em

#pains
  width 21em
  text-align left
  font-size 48pt
  overflow visible
  margin 1em 0 0 .5em
  h2
    color dhfheadertext
    font-size inherit
    margin 0 0 .5em 1em
    display none
  q
    display block
    color black
    font-size inherit
    margin-left 2.5em
    word-wrap break-word
    max-width 21em
    &:before
      content "\201C"
      display inline-block
      margin-right .15em
      font-size 375%
      float left
      position absolute
      left .25em
      top -.137em
      font-weight 800
  cite
    display block
    font-size 50%
    margin-left 5em
  li
    clear both
    margin 0 2.75em 1.5em 0
    position relative
    &:after
      content "\3009"
      display block
      position absolute
      right -1.25em
      top 0
      font-size 200%
      opacity .3
      font-weight 800
      overflow visible
      transition(all .25s ease-in-out)
      &:hover
        opacity 1.0
    &.open:after
      opacity 1.0
      transform(rotate(90deg))
      transform-origin(40% 50% 0)
    q:after
      content "\201D"
      color black
    &:nth-child(3n+0)
      q:before, cite, &:after, a
        color dhfyellow
      button
        background-color dhfyellow
    &:nth-child(3n+1)
      q:before, cite, &:after, a
        color dhfblue
      button
        background-color dhfblue
    &:nth-child(3n+2)
      q:before, cite, &:after, a
        color dhfgreen
      button
        background-color dhfgreen
footer
  width 100%
  clear both
  padding-bottom 2em
  p
    text-align center
    font-size 200%