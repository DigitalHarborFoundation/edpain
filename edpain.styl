dhfgreen = #00C12A
dhfyellow = #FEBD25
dhfblue = #0091D4
dhfbordergray = #F3F1F2
dhfedlinktext = #3C708A
dhfheadertext = #27a9e0

transition(n)
  transition n
  -webkit-transition n
  -moz-transition n
  -o-transition n
  -ms-transition n
  
transform(n)
  transform n
  -webkit-transform n
  -moz-transform n
  -o-transform n
  -ms-transform n

transform-origin(n)
  transform-origin n
  -webkit-transform-origin n
  -moz-transform-origin n
  -o-transform-origin n
  -ms-transform-origin n
  
@import "html5-reset"

@font-face
  font-family "GeosansLight"
  src url("GeosansLight.ttf")  

body
  font-size 16pt
  font-family "GeosansLight"
  color #3A3A3A
  text-align center
  a
    text-decoration none

body > header
  width 100%
  height 4em
  background-color dhfbordergray
  font-size 133%
  line-height 4em
  text-align left
  #preLogo
    color dhfgreen
    margin -1em .5em 0em 4em
    display inline-block
    vertical-align text-bottom
  .smallLogo
    height 2em
    margin-top 1em
  #postLogo
    color dhfgreen
    margin-left .5em
    display inline-block
    vertical-align text-top
    margin-top -1.25em
  #anchorLogo
    height 2.5em
    padding-right 4em
    padding-bottom 1.5em
    position absolute
    right 0
    top 0
    vertical-align top
    word-wrap nowrap
    font-size inherit
    background-image url('EdTechLinkAnchor.svg')
    background-position right top
    background-size auto 100%
    background-repeat no-repeat
    color dhfedlinktext

#subHeader
  h1
    font-size 1330%
    font-family "helvetica"
    font-weight 800
    color transparent
    text-shadow .01em .01em .01em dhfheadertext, 
        .005em .005em .005em darken(dhfheadertext, 40%), 
        .01em .01em 0 dhfheadertext
  p
    font-size 192%
    margin-top -1.1em
    color dhfheadertext
    margin-left 17em
    a
      color dhfyellow
    
#description
  font-size 229%
  margin-top 1.75em
  text-align center
  p
    width 25em
    margin 1em auto 0 auto
    text-align left
    line-height 1.25em
    a
      color dhfyellow

#painEntry
  font-size 216%
  width 27em
  text-align left
  display inline-block
  margin 2em auto 0 auto

#painEntry input::-ms-input-placeholder,
#postPainEntry input::-ms-input-placeholder
  color: #AAA
  text-align: center

#painEntry input:-moz-placeholder,
#postPainEntry input:-moz-placeholder
  color: #AAA
  text-align: center

#painEntry input::-webkit-input-placeholder,
#postPainEntry input::-webkit-input-placeholder
  color: #AAA
  text-align: center

#painEntry, #postPainEntry 
  input
    margin 0 .5em
    border .13em solid dhfheadertext
    border-top 0
    border-right 0
    border-left 0
    border-radius .075em
    padding .25em
    text-align center
    &:focus
      outline none
  .inputwrapper
    margin 0
    padding 0
    display inline
    position relative
    &:after, &:before
      content ""
      display block
      border .13em solid dhfheadertext
      border-left 0
      border-top 0
      border-bottom 0
      height .3em
      float right
      position absolute
      bottom -.38em
    &:after
      right .5em
    &:before
      left .5em

#painEntry
  .role
    width 13em
  .pluralRole
    visibility hidden
  a
    color dhfheadertext
  p
    margin-bottom 1em
  textarea
    width 25.5em
    height 4.5em
    border 0
    margin-bottom -.25em
    padding .15em 0
    overflow hidden
    line-height 1.5em
    border .13em solid dhfheadertext
    border-radius .075em
    &:focus
      outline none
  .name
    width 12em
  .zip
    width 4.5em
  .identifiers > *:last-child
    margin-right 0

#painEntry .post,
#postPainEntry button,
#pains .social .post button,
body > footer button
  width 10.5em
  font-size inherit
  font-family "GeosansLight"
  color white
  background-color dhfgreen
  border 0
  border-radius 3px
  box-shadow 2px 2px 2px #AAA
  padding .20em 0
  margin 0
  margin-bottom 1em
  cursor pointer
  &:active
    color #AAA
    box-shadow 2px 2px 2px #AAA inset
    position relative
    left 2px
    top 2px
    opacity 1.0
  &:hover
    opacity 1.0
    

#painEntry .post
  width 100%
  visibility hidden
  &:hover
    background-color dhfheadertext

#postPainEntry
  font-size 200%
  width 26em
  height 8em
  margin 0 auto
  display none
  p
    margin-top 1.5em
    font-size 181%
    text-align center
    margin-bottom .25em
  button
    padding .25em .5em
    background-color dhfyellow
    opacity 0.8
    cursor pointer
    margin-top .5em
    &:hover
      opacity 1.0
      
#pains
  text-align left
  font-size 363%
  margin 1em 0 0 .5em
  .content
    position relative
    display inline-block
    width 18em
    overflow visible
    vertical-align top
  .social
    display inline-block
    text-align center
    width 3em
    .shares
    .post
      display block
      button
        font-size 50%
        width 1.120em
        height 1.120em
        text-align center
        padding .06em
        margin 0
        font-weight bold
        opacity .9
      .twitter
        margin-right .25em
  h2
    color dhfheadertext
    font-size inherit
    margin 0 0 .5em 1em
    display none
  q
    display block
    color black
    font-size inherit
    margin-left 2.5em
    word-wrap break-word
    max-width 21em
    &:before
      content "\201C"
      display inline-block
      margin-right .15em
      font-size 375%
      float left
      position absolute
      left .25em
      top -.137em
      font-weight 800
  cite
    display block
    font-size 50%
    margin-left 5em
  li
    width 21em
    clear both
    margin 0 2.75em 1.5em 0
    position relative
    q:after
      content "\201D"
      color black
    &:nth-child(3n+0)
      q:before, cite, &:after, a, .social, q:hover
        color dhfyellow
      button, .social button
        background-color dhfyellow
    &:nth-child(3n+1)
      q:before, cite, &:after, a, .social, q:hover
        color dhfblue
      button, .social button
        background-color dhfblue
    &:nth-child(3n+2)
      q:before, cite, &:after, a, .social, q:hover
        color dhfgreen
      button, .social button
        background-color dhfgreen
body > footer
  width 100%
  clear both
  padding-bottom 2em
  p
    text-align center
    font-size 200%
    display none
  button
    padding .25em
    font-size 200%
  