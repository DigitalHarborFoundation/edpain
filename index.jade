html
  head
    title #edpain - Digital Harbor Foundation
    //if lte IE 8
      meta(http-equiv='refresh', content='1;oldBrowser.html')
    meta(http-equiv='X-UA-Compatible', content='chrome=1')
    link(rel='alternate', type='application/rss+xml', title='#EdPain - Digital Harbor Foundation', href="http://edpain.digitalharborfoundation.org/rss.xml")
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black-translucent')
    meta(name='csrf_token', content='#{csrf_token}')
    link(rel='stylesheet', type='text/css', href='http://yui.yahooapis.com/3.5.1/build/cssreset/cssreset-min.css')
    link(rel='stylesheet', type='text/css', href='edpain.css')
    //if lte IE 9
      link(rel='stylesheet', type='text/css', href='edpain-ie.css')
    script(src='jquery.min.js')
    script(src='underscore-min.js')
    script(src='waypoints.min.js')
    script(src='https://maps.googleapis.com/maps/api/js?sensor=false')
    script(src='/socket.io/socket.io.js')
    script(src='edpain.js')
    != "<script type='template/underscore' id='painDisplayTemplate'>"
    li
      q <%-pain %>
      cite
        | <%-name %> — <%-role%> from
        span#zipTarget
          |  <%- cityState || zip %>
    != "</script>"
    != "<script type='template/underscore' id='painExtraTemplate'>"
      .painExtra
        button.twitter tweet it
        |  
        button.facebook facebook it
    != "</script>"
